{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Team App

{% endblock %}


{% block content %}

    <h1>Teams...</h1>


    <article>

        <ul>
            {% for team in teams %}

                <li>
                    <a href="/team/{{ team.code }}">
                        <strong>{{ team.name }}</strong>
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


    {# Only show form if user is logged in #}
    {% if session.user_id %}

        <article>

            <h3>Add a New Team...</h3>

            <form action="/add" method="POST">

                <input
                    type="text"
                    name="name"
                    placeholder="Name of new team"
                    required
                >


                <input
                    type="text"
                    name="code"
                    placeholder="Code of team"
                    required
                >


                <input
                    type="text"
                    name="description"
                    placeholder="Description of team"
                    required
                >

                <input
                    type="text"
                    name="website"
                    placeholder="Website for team"
                    required
                >

                <button>Add the Thing</button>

            </form>

        </article>

    {% endif %}

{% endblock %}